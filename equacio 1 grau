using System;

namespace Mireia
{
    class Program
    {
        static void Main(string[] args)
        {
            int a,b;
            double x;
            Console.WriteLine("Donem la a");
            a= Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Donem la b");
            b= Convert.ToInt32(Console.ReadLine());

                if (a != 0){
                    x = (-1*b) / a;
                    Console.WriteLine("solucio ecuacio" + x);
                } 
                else if(b !=0){
                    Console.WriteLine("no es pot resoldre");

                }else 
                Console.WriteLine("Indeterminat");
        }
        Console.Readkey();
    }
}
